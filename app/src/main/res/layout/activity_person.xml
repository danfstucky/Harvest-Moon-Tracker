<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.danfstuckygmail.harvestmoontracker.PersonActivity">

        <ImageView
            android:layout_width="108dp"
            android:layout_height="150dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/anissa"
            android:id="@+id/person_imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Person"
            android:id="@+id/person_name"
            android:layout_marginTop="53dp"
            android:paddingLeft="8dp"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rival_text"
            android:layout_toEndOf="@+id/rival_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Info"
            android:id="@+id/info_text"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/person_imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:text="Birthday:"
            android:id="@+id/birthday_label"
            android:textStyle="bold"
            android:layout_below="@+id/info_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="birthday"
            android:id="@+id/birthday_text"
            android:layout_alignTop="@+id/birthday_label"
            android:layout_toRightOf="@+id/person_imageView"
            android:layout_toEndOf="@+id/person_imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:text="Best Gifts:"
            android:id="@+id/best_gifts_label"
            android:textStyle="bold"
            android:layout_below="@+id/birthday_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="best gifts"
            android:id="@+id/best_gifts_text"
            android:layout_below="@+id/best_gifts_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:text="Good Gifts:"
            android:id="@+id/good_gifts_label"
            android:textStyle="bold"
            android:layout_below="@+id/best_gifts_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="good gifts"
            android:id="@+id/good_gifts_text"
            android:layout_below="@+id/good_gifts_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:text="Bad Gifts:"
            android:id="@+id/bad_gifts_label"
            android:textStyle="bold"
            android:layout_below="@+id/good_gifts_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="bad gifts"
            android:id="@+id/bad_gifts_text"
            android:layout_below="@+id/bad_gifts_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:text="Rival:"
            android:id="@+id/rival_label"
            android:textStyle="bold"
            android:layout_below="@+id/bad_gifts_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/rival_text"
            android:layout_alignBottom="@+id/rival_label"
            android:layout_toRightOf="@+id/person_imageView"
            android:layout_toEndOf="@+id/person_imageView" />

    </RelativeLayout>
</ScrollView>
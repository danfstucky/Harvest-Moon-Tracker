<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upgrade_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.danfstuckygmail.harvestmoontracker.upgrades.UpgradeTypeActivity">

    <TextView
        android:text="Level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upgrade_level_header"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:text="Some Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upgrade_info_value"
        android:layout_below="@+id/upgrade_info_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Info:"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:id="@+id/upgrade_info_label"
        android:textStyle="normal|bold"
        android:layout_below="@+id/upgrade_level_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Cost:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upgrade_info_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:id="@+id/upgrade_cost_label"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Lumber:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upgrade_cost_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/upgrade_lumber_label"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Some Lumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/upgrade_lumber_label"
        android:layout_alignLeft="@+id/upgrade_cost_value"
        android:layout_alignStart="@+id/upgrade_cost_value"
        android:id="@+id/upgrade_lumber_value" />

    <TextView
        android:text="Stone:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upgrade_lumber_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/upgrade_stone_label"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Some Stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upgrade_stone_value"
        android:layout_alignBaseline="@+id/upgrade_stone_label"
        android:layout_alignBottom="@+id/upgrade_stone_label"
        android:layout_alignLeft="@+id/upgrade_lumber_value"
        android:layout_alignStart="@+id/upgrade_lumber_value" />

    <TextView
        android:text="Some Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upgrade_cost_value"
        android:layout_alignBaseline="@+id/upgrade_cost_label"
        android:layout_alignBottom="@+id/upgrade_cost_label"
        android:layout_toRightOf="@+id/upgrade_cost_label"
        android:layout_marginStart="25dp" />

</RelativeLayout>